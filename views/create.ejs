			<div class="card card-success">
                <div class="card-header">
                  <h3 class="card-title">Add Anime</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form action="/add" method="POST">
                    <div class="row">
                      <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Name:</label>&nbsp;
                <input type="String" placeholder="Enter Anime Name" name="name" required></br></br>
           
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                                
                            <label>Genre:</label>&nbsp;
                            <input type="String" placeholder="Enter Genre" name="genre" required></br></br>
                            </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        
                        <div class="form-group">
                          <label>Ongoing/Completed:</label>&nbsp;
                          <select name = "dropdown">
                            
                            <option value = "Ongoing" selected>Ongoing</option>
                            <option value = "Completed">Compeleted</option>
                            </select>
                            <!---<label>Ongoing/Completed:</label>&nbsp;
                            <input type="String" placeholder="Ongoing/Completed" name="uoc" required>--></br></br>
                            </div>
                      </div>
                      <div class="col-sm-6">
                        
                        <div class="form-group">
                                                        
                            <label>Author:</label>&nbsp;
                            <input type="String" placeholder="Enter Author" name="author" ></br></br>
                            
                            </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                      <label>Number of Seasons:</label>
                <input type="Number" placeholder="Enter No. of seasons" name="nos"  required></br></br>     
                </div>       
            </div>

                      
                </div>
                <button type="submit" id="update" class="btn btn-warning">Add</button>
               </form>
                </div>
                </div>

			
